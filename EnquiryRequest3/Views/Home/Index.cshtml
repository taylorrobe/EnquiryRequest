@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Enquiry Request</h1>
    <p class="lead">Request data searches and manage billing</p>
    @*<p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Enquiries</h2>
        <p>
            links to enquiries
        </p>
        <p>
            <ul>
                @if (ViewContext.HttpContext.User.IsInRole("EnquiryManager") || ViewContext.HttpContext.User.IsInRole("Admin"))
                {
                    <li>@Html.ActionLink("All Enquiries", "ManagerIndex", "Enquiries")</li>
                }
                <li>@Html.ActionLink("My Enquiries", "Index", "Enquiries")</li>
                <li>@Html.ActionLink("New Enquiry", "Create", "Enquiries")</li>

            </ul>
        </p>
    </div>
    <div class="col-md-4">
        <h2>Invoices</h2>
        <p>
            links to invoices
        </p>
        <p>
            <ul>

                @if (ViewContext.HttpContext.User.IsInRole("EnquiryManager") || ViewContext.HttpContext.User.IsInRole("Admin"))
                {
                    <li>@Html.ActionLink("All Invoices", "ManagerIndex", "Invoices")</li>
                }
                else
                {
                    <li>@Html.ActionLink("My Invoices", "Index", "Invoices")</li>
                    <li>@Html.ActionLink("New Invoice", "Create", "Invoices")</li>
                }
            </ul>
        </p>
    </div>
